<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sharks.gp.sharkspassengerapplication.ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/userimg"
            android:paddingBottom="5dp"
            android:layout_weight="2"
            android:src="@drawable/usericn2"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/updownimg"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:src="@drawable/arrowup"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/avgimg"
            android:paddingBottom="5dp"
            android:layout_weight="2"
            android:src="@drawable/confused4"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:id="@+id/avgtxt"
        android:text="...."
        android:background="@drawable/buttonoval"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Last Week Detected Pattrens"/>

    <!--<org.eazegraph.lib.charts.PieChart-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/piechart"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:padding="8dp"/>-->


    <org.eazegraph.lib.charts.BarChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:padding="10dp"
        app:egFixedBarWidth="true"
        app:egBarWidth="20dp"
        app:egLegendHeight="40dp"
        android:layout_weight="0.96" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:text="Accepted Trips"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="Ignored Trips"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acceptedcount"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ignoredcount"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</ScrollView>
